<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('partials/head.ejs')  %>
    <title>Registration</title>
</head>
<body>
    <header>
        <%-include('partials/header.ejs')  %>
        <div class="head-buttons">
            <a href="/registration" class="head-btn">Регистрация</a>
            <a href="/login" class="head-btn">Вход</a>
        </div>
    </header>
    <div class="login-fill">
        <h3 class="h3">Вход</h3>
        <form action="/api/signup" method="POST" class="form">
            <fieldset class="fieldset">
                <input type="email" placeholder="Введите E-mail" name="email">
            </fieldset>
            <fieldset class="fieldset">
                <input type="text" placeholder="Введите полное имя" name="full_name">
            </fieldset>
            <fieldset class="fieldset">
                <input type="text" placeholder="Введите пароль" name="password">
            </fieldset>
            <fieldset class="fieldset">
                <input type="text" placeholder="Подтвердите пароль" name="re_password">
            </fieldset>
            <button type="submit" class="edit-btn">Зарегистрироваться</button>
        </form>
    </div>
</body>
</html>