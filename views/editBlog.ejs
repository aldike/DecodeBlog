<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('partials/head.ejs')  %>
    <title>Blog</title>
</head>
<body>
    <header>
        <%-include('partials/header.ejs')  %>
    </header>
    <div class="container">
        <div class="main">
            <form action="/api/blogs/edit" method="post" class="new-blog" enctype="multipart/form-data">
                <h3 class="h3">Редактировать блог</h3>
                <input type="hidden" value="<%=blog._id%>" name="id">
                <input value="<%= blog.title %>" type="text" placeholder="Введите заголовок блога" name="title">
                <select value="<%= blog.category._id %>" class="cat-select" name="category">
                    <% 
                            categories.forEach(category =>{
                                if(category.id == blog.category){
                    %>
                    <option value="<%= category._id %>" selected><%=category.name  %></option>
                    <%
                                }else{
                    %>
                    <option value="<%=category._id%>"><%=category.name%></option>
                    <%
                                }
                            })
                    %>
                </select>
                <input type="file" class="select-img" name="image">
                <textarea name="description" id="" cols="30" rows="10" placeholder="Введите описание блога" name="description"><%= blog.description %></textarea>
                <button type="submit" class="edit-btn" style="width: 16%;">Сохранить</button>
            </form>
        </div>
    </div>
    <%-include('partials/scripts.ejs')%>
</body>
</html>